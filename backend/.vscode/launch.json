{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Attach to .NET",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "aspnetcore_backend_dev"
                ],
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeCwd": "${workspaceFolder}",
                "quoteArgs": false
            },

            "sourceFileMap": {
                "/app": "${workspaceFolder}/src"
            },

            "justMyCode": false
        }
    ]
}
